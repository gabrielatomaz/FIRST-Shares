
<div class="card">
    <div class="card-header">
        <h2 class="mb-0">
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                PDFs
            </button>
        </h2>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body" id="bodyPDF">
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">

    var pageSizePDF = 2;
    var pageIndexPDF = 0;

    $(document).ready(function () {
        GetDataPDF();

        $(window).scroll(function () {
            if ($(window).scrollTop() ==
               $(document).height() - $(window).height()) {
                GetDataPDF();
            }
        });
    });

    function GetDataPDF() {
        var isAdmin = false;
    @{
        var isAdmin = false;
        if (User.Identity.IsAuthenticated)
        {
            var user = (System.Security.Claims.ClaimsIdentity)User.Identity;
            var cargoUsuario = user.Claims.ToList().Find(t => t.Type == "CargoUsuario").Value;

            isAdmin = (cargoUsuario == "Administrador" || cargoUsuario == "Moderador");

        }
    }
        var True = true, False = false;
        isAdmin = @isAdmin;
        $.ajax({
            type: 'GET',
            url: "@Url.Action("GetDataPDF", "Resources")",
            data:{"pageindex":pageIndexPDF,"pagesize":pageSizePDF},
            dataType: 'json',
            success: function (data) {
                if (data != null) {
                    for (var i = 0; i < data.length; i++) {
                        var deletevarPDF = '';
                        if (isAdmin) {
                            deletevarPDF = '<a href="/Resources/Excluir/' + data[i].id + '"class="float-right mt-2 mr-2 ml-2">' +
                                '<i class="fas fa-trash-alt text-secondary"></i></a>';
                        }
                        $("#bodyPDF").append('<h4>' +
                            data[i].titulo + '</h4>'
                            + '<span>' + data[i].resumo + '</span><br />' +
                        '<div class="embed-responsive embed-responsive-16by9 mt-2">' +
                        '<iframe class="embed-responsive-item" src="' + data[i].src + '" allowfullscreen></iframe>' +
                        '</div><i><span>Publicado por: <a asp-area="" style="color: #212529;" asp-controller="Profile" asp-action="UserProfile" asp-route-idUsuario="' +
                        data[i].idUsuario + '">' + data[i].nomeUsuario + '</a></span></i>' + deletevarPDF + '<hr/>');
                    }
                    pageIndexPDF++;
                }
            }
        });
    }
</script>