@{

    var user = (System.Security.Claims.ClaimsIdentity)User.Identity;
    var photo = user.Claims.ToList().Find(t => t.Type == "Foto").Value;

}
@model FIRSTShares.Entities.Usuario

<div class="container mt-5">
    <div class="row">
        <div class="col-4 text-center">
            <img src="~/img/usuarios/@photo" class="img-fluid img-thumbnail" width="300" />
            <a asp-area="" asp-controller="Profile" asp-action="ExcluirPerfilAsync" asp-route-id="@Model.ID" class="btn btn-danger mt-3"><i class="fas fa-user-times mr-2"></i> Excluir perfil</a>
        </div>
        <div class="col-8">
            <ul class="nav nav-tabs w-50" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" style="color:#467A99;" id="config-tab" data-toggle="tab" href="#profile"
                       role="tab" aria-controls="home" aria-selected="true">Configurações</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:#467A99;" id="team-tab" data-toggle="tab" href="#team"
                       role="tab" aria-controls="profile" aria-selected="false">Time</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade fade show active" id="profile" role="tabpanel" aria-labelledby="config-tab">
                    <partial name="~/Views/Profile/_PartialConfiguracoes.cshtml" model="@Model" />
                </div>
                <div class="tab-pane fade" id="team" role="tabpanel" aria-labelledby="team-tab">
                    <partial name="~/Views/Profile/_PartialTeams.cshtml" model="@Model" />
                </div>
            </div>
        </div>
    </div>
</div>