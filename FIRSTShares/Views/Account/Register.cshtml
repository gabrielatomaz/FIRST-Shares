@{
    ViewData["Title"] = "Junte-se a nós!";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer


<div class="d-flex justify-content-center">
    <div class="w-50 mt-lg-4 mb-lg-4">
        @if (ViewBag.Mensagem != null)
        {
            var tipoAlert = "danger";
            @if (ViewBag.Mensagem.Contains("sucesso"))
            {
                tipoAlert = "success";
            }
            <div class="alert alert-@tipoAlert alert-dismissible fade show" role="alert">
                @ViewBag.Mensagem
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <form action="/Account/CadastrarUsuario" enctype="multipart/form-data" class="form-row" method="POST">
            <div class="form-group col-md-6">
                <label>@_localizer["Nome"]</label>
                <input type="text" name="nome" class="form-control" oninvalid="this.setCustomValidity(@_localizer["Por favor, preencha esse campo."])" placeholder="Ex.: Gabriela" required />
            </div>
            <div class="form-group col-md-6">
                <label>
                    @_localizer["Sobrenome"]
                </label>

                <input type="text" name="sobrenome" class="form-control" oninvalid="this.setCustomValidity(@_localizer["Por favor, preencha esse campo."])" placeholder="Ex.: Ribeiro" required />
            </div>
            <div class="form-group col-md-6">
                <label>@_localizer["Usuário"]</label>
                <input type="text" name="nomeusuario" class="form-control" oninvalid="this.setCustomValidity(@_localizer["Usuário inválido."])" min="5" max="25" placeholder="@_localizer["Nome de usuário"]" required />
            </div>
            <div class="form-group col-md-6">
                <label>@_localizer["E-mail"]</label>
                <input type="email" name="email" class="form-control" oninvalid="this.setCustomValidity(@_localizer["E-mail inválido."])" placeholder="email@email.com" required />
            </div>
            <div class="form-group col-md-6">
                <label>@_localizer["Senha"]</label>
                <input type="password" name="senha" class="form-control" min="5" max="50" oninvalid="this.setCustomValidity(@_localizer["Senha inválida! É necessário pelo menos 5 caracteres."])" placeholder="*******" required />
            </div>
            <div class="form-group col-md-6">
                <label>Confirmar</label>
                <input type="password" name="confirmaSenha" class="form-control" min="5" max="50" oninvalid="this.setCustomValidity(@_localizer["Senha inválida! É necessário pelo menos 5 caracteres."])" placeholder="*******" required />
            </div>
            <div class="form-group col-md-12">
                <div class="custom-file">
                    <input type="file" name="foto" class="custom-file-input">
                    <label class="custom-file-label" for="customFileLangHTML" data-browse="@_localizer["Buscar arquivo"]">@_localizer["Escolha uma foto"]</label>
                </div>
            </div>
            <div class="alert alert-secondary col-md-12 text-center" role="alert">
                @_localizer["Informações sobre o seu time (opcional)"]
            </div>
            <div class="form-group col-md-6">
                <label>@_localizer["Número do seu time"]</label>
                <input type="number" name="numero" class="form-control" placeholder="Ex.: 1772">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleFormControlSelect1">Cargo</label>
                <select name="cargoTime" class="form-control" id="exampleFormControlSelect1">
                    <option value="Nenhum">@_localizer["Cargo"]</option>
                    <option value="Coordenador">@_localizer["Coordenador"]</option>
                    <option value="Mentor">@_localizer["Mentor"]</option>
                    <option value="Aluno">@_localizer["Aluno"]</option>
                    <option value="Voluntario">@_localizer["Voluntário"]</option>
                </select>
            </div>

            <div class="col-md-12">
                <input type="submit" value="@_localizer["Cadastrar"]" class="btn btn-block btn-primary" />
            </div>
        </form>
    </div>
</div>

